<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_dialog"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginBottom="12dp"
        android:textStyle="bold"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/delete_album_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you want to delete album &quot;album_name&quot; permanently in device ?"
        android:layout_marginVertical="10dp"
        android:textSize="16dp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:paddingTop="10dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_album_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="#ffffff"
            android:text="Cancel"
            android:background="@drawable/styled_button"
            android:theme="@style/dSelectedBtn"
            tools:ignore="HardcodedText,SpeakableTextPresentCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_album_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#ffffff"
            android:text="OK"
            android:background="@drawable/styled_button"
            android:theme="@style/dSelectedBtn"
            tools:ignore="HardcodedText,SpeakableTextPresentCheck" />
    </LinearLayout>
</LinearLayout>