<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"

    android:background="@drawable/rounded_corners"
    android:paddingVertical="10dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Information"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        tools:ignore="HardcodedText,SpUsage" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        >
        <TableRow>

            <TextView
                android:gravity="left"
                android:padding="10dp"
                android:text="Image Tags:"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />

            <TextView
                android:id="@+id/photoTags"
                android:layout_width="250dp"
                android:layout_weight="1"
                android:background="@color/white_smoke"
                android:padding="5dp"
                android:textSize="15sp" />
        </TableRow>
        <TableRow>

            <TextView
                android:gravity="left"
                android:padding="10dp"
                android:text="Image Name:"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />

            <TextView
                android:id="@+id/photoName"
                android:layout_width="250dp"
                android:layout_weight="1"
                android:background="@color/white_smoke"
                android:padding="5dp"
                android:textSize="15sp" />
                />
        </TableRow>
        <TableRow>

            <TextView
                android:gravity="left"
                android:padding="10dp"
                android:text="Image Path:"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />

            <TextView
                android:id="@+id/photoPath"
                android:layout_width="250dp"
                android:layout_weight="1"
                android:background="@color/white_smoke"
                android:padding="5dp"
                android:textSize="15sp" />
        </TableRow>
        <TableRow>

            <TextView
                android:gravity="left"
                android:padding="10dp"
                android:text="Last Modified:"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />

            <TextView
                android:id="@+id/photoLastModified"
                android:layout_width="250dp"
                android:layout_weight="1"
                android:background="@color/white_smoke"
                android:padding="5dp"
                android:textSize="15sp" />
                />
        </TableRow>
        <TableRow>

            <TextView
                android:gravity="left"
                android:padding="10dp"
                android:text="Size:"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />

            <TextView
                android:layout_width="250dp"
                android:layout_weight="1"
                android:background="@color/white_smoke"
                android:padding="5dp"
                android:textSize="15sp"
                android:id="@+id/photoSize" />
        </TableRow>
    </TableLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="OK"
        android:textColor="#ffff"
        android:background="@drawable/styled_button"
        android:theme="@style/dSelectedBtn"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</LinearLayout>