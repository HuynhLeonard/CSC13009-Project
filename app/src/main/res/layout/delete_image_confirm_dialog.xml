<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ct_ly"
        android:layout_width="361dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/titleBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/deleteNotify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="12dp"
            android:text="Do you want to delete 0 image(s) permanently in the device?"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/titleBox"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="@+id/titleBox"
            app:layout_constraintTop_toBottomOf="@+id/titleBox" />

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/deleteNotify"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="@+id/deleteNotify"
            app:layout_constraintTop_toBottomOf="@+id/deleteNotify">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancelDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="#ffffff"
                android:text="Cancel"
                android:background="@drawable/styled_button"
                android:theme="@style/dSelectedBtn"
                tools:ignore="HardcodedText,SpeakableTextPresentCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/confirmDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:textColor="#ffffff"
                android:text="OK"
                android:background="@drawable/styled_button"
                android:theme="@style/dSelectedBtn"
                tools:ignore="HardcodedText,SpeakableTextPresentCheck" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
