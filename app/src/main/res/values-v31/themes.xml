<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
    Having themes.xml for v31 variant because @android:dimen/system_app_widget_background_radius
     and @android:dimen/system_app_widget_internal_padding requires API level 31
    -->
    <!-- Base application theme. -->
    <style name="Theme.PhotosGroup3" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!--  custom color-->

        <!-- custom -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/colorOnPrimary</item>

    </style>


    <style name="Theme.PhotosGroup3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    <style name="Theme.photosGroup3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

    <!--    <style name="Theme.photosGroup3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->
    <!--    main activity-->
    <style name="navbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="fragBtn">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="iconColor">
        <item name="android:color">?attr/colorOnPrimary</item>
    </style>


    <!--    image display-->
    <style name="customBackground">
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
    </style>

    <style name="customBackgroundSecond">
        <item name="android:background">?attr/colorOnSecondary</item>
    </style>

    <style name="customFloatBtnPri">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="customFloatBtnSec">
        <item name="android:backgroundTint">@color/fab</item>
    </style>

    <style name="imageBtn">
        <item name="android:backgroundTint">@color/red_1</item>
    </style>

    <style name="customFloatBtnNormal">
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
    </style>

    <!--    selected picture-->

    <style name="selectedImg">
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <!--    info dialog-->
    <style name="dialogbackgroud">
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
    </style>

    <!--    custom dialog-->
    <style name="dBackground">
        <item name="android:background">@color/dlmain</item>
    </style>

    <style name="dSelectedBtn">
        <item name="android:backgroundTint">@color/dlmain</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="customHeart">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.PhotosGroup3.AppWidgetContainer" parent="Theme.PhotosGroup3.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
    <style name="Theme.PhotosGroup3.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="appWidgetRadius">@android:dimen/system_app_widget_background_radius</item>
        <item name="appWidgetInnerRadius">@android:dimen/system_app_widget_inner_radius</item>
    </style>
</resources>